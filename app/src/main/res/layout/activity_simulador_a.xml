<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:padding="0dp"
    android:background="#006bb1" >

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="480dp"
    android:layout_gravity="center"
    android:padding="0dp" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="480dp"
    android:layout_gravity="center"
    tools:context="com.brunob28.consorcioprimorossiabc.SimuladorAActivity"
    android:id="@+id/SimuladorAActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginTop="0dp"
        android:layout_width="320dp"
        android:layout_height="480dp"
        android:layout_gravity="top"
        android:id="@+id/menuAView"
        android:src="@drawable/simuladora" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Escolha"
        android:id="@+id/txt_grupo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="clicouGrupo"
        android:clickable="true"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="185dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_valorcredito"
        android:layout_marginTop="66dp"
        android:layout_toEndOf="@+id/txt_grupo"
        android:layout_toRightOf="@+id/txt_grupo"
        android:layout_marginLeft="-40dp"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="13sp"
        android:onClick="clicouValorCredito"
        android:maxLines="1"
        android:gravity="left"
        android:layout_below="@+id/txt_grupo"
        android:textColor="#ffffff"
        android:text="" />

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:gravity="center"
        android:id="@+id/txt_percentual1"
        android:layout_marginTop="236dp"
        android:layout_toLeftOf="@+id/txt_valorcredito"
        android:layout_toStartOf="@+id/txt_valorcredito"
        android:layout_marginRight="42dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:clickable="true"
        android:onClick="clicouPercentuais" />

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:gravity="center"
        android:id="@+id/txt_percentual2"
        android:layout_marginTop="272dp"
        android:layout_toLeftOf="@+id/txt_valorcredito"
        android:layout_toStartOf="@+id/txt_valorcredito"
        android:layout_marginRight="42dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:clickable="true"
        android:onClick="clicouPercentuais" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_d14"
        android:layout_marginTop="111dp"
        android:layout_toEndOf="@+id/txt_grupo"
        android:layout_toRightOf="@+id/txt_grupo"
        android:layout_marginLeft="-40dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:maxLines="1"
        android:gravity="left"
        android:layout_below="@+id/txt_grupo"
        android:textColor="#ffffff"
        android:text="" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_d15"
        android:layout_marginTop="149dp"
        android:layout_toEndOf="@+id/txt_grupo"
        android:layout_toRightOf="@+id/txt_grupo"
        android:layout_marginLeft="-40dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:maxWidth="112dp"
        android:maxLines="1"
        android:gravity="left"
        android:layout_below="@+id/txt_grupo"
        android:textColor="#ffffff"
        android:text="" />

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:gravity="center"
        android:id="@+id/txt_c16"
        android:layout_marginTop="309dp"
        android:layout_toLeftOf="@+id/txt_valorcredito"
        android:layout_toStartOf="@+id/txt_valorcredito"
        android:layout_marginRight="42dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_d16"
        android:layout_marginTop="185dp"
        android:layout_toEndOf="@+id/txt_grupo"
        android:layout_toRightOf="@+id/txt_grupo"
        android:layout_marginLeft="-40dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:maxWidth="112dp"
        android:maxLines="1"
        android:gravity="left"
        android:layout_below="@+id/txt_grupo"
        android:textColor="#ffffff"
        android:text="" />

    <TextView
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_c21"
        android:layout_marginTop="221dp"
        android:layout_toEndOf="@+id/txt_grupo"
        android:layout_toRightOf="@+id/txt_grupo"
        android:layout_marginLeft="-56dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxWidth="112dp"
        android:maxLines="1"
        android:gravity="left"
        android:layout_below="@+id/txt_grupo"
        android:textColor="#000000"
        android:text="" />

    <TextView
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_c22"
        android:layout_marginTop="257dp"
        android:layout_toEndOf="@+id/txt_grupo"
        android:layout_toRightOf="@+id/txt_grupo"
        android:layout_marginLeft="-56dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxWidth="112dp"
        android:maxLines="1"
        android:gravity="left"
        android:layout_below="@+id/txt_grupo"
        android:textColor="#000000"
        android:text="" />

    <Button
        android:layout_width="126dp"
        android:layout_height="30dp"
        android:id="@+id/cmd_sair"
        android:onClick="sairOnClick"
        android:gravity="left"
        android:layout_toEndOf="@+id/txt_grupo"
        android:layout_toRightOf="@+id/txt_grupo"
        android:layout_below="@+id/txt_grupo"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="-65dp"
        android:alpha="0" />

    <Button
        android:layout_width="126dp"
        android:layout_height="30dp"
        android:id="@+id/cmd_recalcular"
        android:onClick="clicouRecalcular"
        android:gravity="left"
        android:layout_toLeftOf="@+id/cmd_sair"
        android:layout_below="@+id/txt_grupo"
        android:layout_marginTop="300dp"
        android:layout_marginRight="95dp"
        android:alpha="0" />

</RelativeLayout>

</ScrollView>

</ScrollView>
